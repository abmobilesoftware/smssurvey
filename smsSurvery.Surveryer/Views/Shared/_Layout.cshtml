@using smsSurvery.Surveryer.Utilities
<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <title>@ViewBag.Title | Loyalty Insights</title>
   <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
   <meta name="viewport" content="width=device-width" />
   @Styles.Render("~/Content/css")
   @Scripts.Render("~/bundles/modernizr")
   
       @RenderSection("css", required: false)  
</head>
<body>
   <header>
      <div class="content-wrapper">
         <div class="float-left logo">            
            @Url.ImageLink(Url.Content("~/Content/images/logo.png"), "home", "Index", "SurveyTemplate", "Survey templates", null, "logo")
         </div>
         <div class="float-right">
            <section id="login">
               @Html.Partial("_LoginPartial")
            </section>
            @if (User.Identity.IsAuthenticated)
            {
               <nav>
                  <ul id="menu">
                     <li>@Html.ActionLink("Manual survey", "ManualSurvey", "Home")</li>

                     <li>@Html.ActionLink("Surveys", "Index", "SurveyTemplate")</li>
                     <li>@Html.ActionLink("Locations", "Index", "Locations")</li>
                     <li>@Html.ActionLink("Responses", "Index", "SurveyResult")</li>
                  </ul>
               </nav>  
            }
         </div>
      </div>
   </header>
   <div id="body">
      @RenderSection("featured", required: false)
      <section class="content-wrapper main-content clear-fix">
         @RenderBody()
      </section>
   </div>
   <footer>
      <div class="content-wrapper">
         <div class="float-left">
            <p>&copy; @DateTime.Now.Year - TxtFeedback</p>
         </div>
      </div>
   </footer>

   @Scripts.Render("~/bundles/jquery")
   @RenderSection("scripts", required: false)
</body>
</html>
