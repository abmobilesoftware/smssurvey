@model IEnumerable<smsSurvey.dbInterface.SurveyResult>

@using MvcPaging;
@using smsSurvey.dbInterface

@{
   IPagedList<SurveyResult> pagingDetails = ViewBag.pagingDetails;
   RouteValueDictionary r = new RouteValueDictionary();
   r.Add("surveyId", Request["surveyId"]);
   r.Add("nrOfAnsweredQuestions", Request["nrOfAnsweredQuestions"]);
   r.Add("iIntervalStart", Request["iIntervalStart"]);
   r.Add("iIntervalEnd", Request["iIntervalEnd"]);
   r.Add("tags", Request["tags"]);
}

@Html.Pager(pagingDetails.PageSize, pagingDetails.PageNumber, pagingDetails.TotalItemCount, r)

@{
    ViewBag.Title = "Messages with certain response";
}
<h2>@ViewBag.ReportTitle</h2>
<table  class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            Customer
        </th>
        <th>
            Survey results
        </th>
        <th>
            Date ran
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Html.ActionLink(item.Customer.PhoneNumber, "Details", "Customer", new { id = item.Customer.PhoneNumber }, null)
        </td>
        <td>
            @Html.ActionLink("Show entire survey results", "Details", "SurveyResult", new { id = item.Id}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateRan)           
        </td>        
    </tr>
}

</table>
