@model IEnumerable<smsSurvey.dbInterface.SurveyPlan>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   @* Create new survey part *@
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThankYouMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateStarted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRunning)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThankYouMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateStarted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEnded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsRunning)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |            
           @if(item.IsRunning) {
            @Html.ActionLink("Stop", "MakeActive", new { id=item.Id })           
           } else {
              @Html.ActionLink("Make active", "MakeActive", new { id=item.Id }) 
           } |
            @Html.ActionLink("Report", "Report","SurveyPlan", new { id=item.Id }, null) |
            @Html.ActionLink("Responses", "Responses","SurveyPlan", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>

